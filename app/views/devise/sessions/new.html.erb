<div class="card-show">
  <h3>Because cardio is boring.</h3>
</div>


<div class="card-show">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, placeholder: "Email (Guest login: guest@test.com)", input_html: {class: "form-input"}, required: false, autofocus: true, label: false %>
      <%= f.input :password, placeholder: "Password (Guest login: 123456)", input_html: {class: "form-input"}, required: false, label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
</div>
<div class="card-show">
  <%= render "devise/shared/links" %>

</div>
